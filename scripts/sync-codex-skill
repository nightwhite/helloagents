#!/usr/bin/env bash
set -euo pipefail

case "${OSTYPE:-}" in
  darwin*|linux*)
    exec "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/sync-codex-skill.sh"
    ;;
  msys*|cygwin*|win32*)
    exec powershell.exe -NoProfile -ExecutionPolicy Bypass -File "$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)/sync-codex-skill.ps1"
    ;;
  *)
    echo "Unsupported OS (OSTYPE=${OSTYPE:-unknown})." >&2
    echo "Use: scripts/sync-codex-skill.sh (macOS/Linux) or scripts/sync-codex-skill.ps1 (Windows)" >&2
    exit 1
    ;;
esac

